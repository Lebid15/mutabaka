# Server-wide
REGISTRY=
IMAGE_NAME=mutabaka
SERVER_PATH=/srv/mutabaka

# Backend env
SECRET_KEY=change-me
DJANGO_DEBUG=False
# Comma-separated; include domain, www, and server IP
DJANGO_ALLOWED_HOSTS=mutabaka.com,www.mutabaka.com,91.98.95.210
# Comma-separated with scheme; no trailing slashes
DJANGO_CSRF_TRUSTED_ORIGINS=https://mutabaka.com,https://www.mutabaka.com
DJANGO_CORS_ALLOWED_ORIGINS=https://mutabaka.com,https://www.mutabaka.com
DJANGO_SETTINGS_MODULE=mujard.settings
# Optional if planning subdomains later
# CSRF_COOKIE_DOMAIN=.mutabaka.com

# Database (PostgreSQL)
POSTGRES_DB=mutabaka
POSTGRES_USER=mutabaka
POSTGRES_PASSWORD=change-me
# Point Django to the postgres service in compose
DATABASE_URL=postgres://mutabaka:change-me@postgres:5432/mutabaka

# Redis (channels)
# For now we rely on in-memory channel layer; configure below to enable Redis
# CHANNEL_LAYERS_URL=redis://redis:6379/0

# Next.js
NEXT_PUBLIC_PUSHER_KEY=
NEXT_PUBLIC_PUSHER_CLUSTER=
